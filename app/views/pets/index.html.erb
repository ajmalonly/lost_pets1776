<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="display-4">Found Pets</h1>
      <p class="lead">Here are all the pets we've found so far.</p>
    </div>
    <%= link_to "Register a new Pet", new_pet_path, class: "btn btn-primary btn-lg" %>
  </div>

  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card shadow-sm">
          <img src="https://static.vecteezy.com/system/resources/thumbnails/002/388/173/small_2x/pets-cartoon-collection-free-vector.jpg" class="card-img-top" alt="<%= pet.name %>">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <p class="card-text">
              <strong>Species:</strong> <%= pet.species %><br>
              <strong>Found:</strong> <%= time_ago_in_words(pet.found_on) %> ago
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

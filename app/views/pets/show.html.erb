<div class="container mt-4 p-2">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @pet.name %></h5>
      <p class="card-text">
        <strong>Address:</strong> <%= @pet.address %><br>
        <strong>Species:</strong> <%= @pet.species %><br>
        <strong>Found:</strong> <%= time_ago_in_words(@pet.found_on) %> ago
      </p>
      <%= link_to "Delete", pet_path(@pet), class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Delete or not?" } %>
      <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-warning"%>
    </div>
  </div>
</div>
